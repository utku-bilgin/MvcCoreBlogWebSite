@model List<CategoryDTo>
<div class="container-xxl flex-grow-1 container-p-y">


    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Kategori Yönetimi /</span> Kategoriler
    </h4>

    <!-- Basic Bootstrap Table -->
    <div class="card p-2">
        <div class="table-responsive text-nowrap">

            <a asp-area="Admin" asp-controller="Category" asp-action="Add" class="btn btn-success mb-2">Kategori Ekle<i class='bx bx-plus'></i></a>

            <table class="table table-bordered" id="categoriesTable" width="100%" cellpadding="0">
                <thead>
                    <tr>
                        <th>İsim</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Oluşturan</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tfoot>
                </tfoot>
                <tbody class="table-border-bottom-0">
                    @foreach (var category in Model)
                    {
                        <tr name="@category.Id">
                            <th>@category.Name</th>
                            <th>@category.CreatedDate.ToShortDateString()</th>
                            <th>@category.CreatedBy</th>
                            <th>@(category.IsDeleted ? "Aktif Değil" : "Aktif")</th>
                            <th>
                                <a asp-area="Admin" asp-controller="Category" asp-action="Update" asp-route-categoryId="@category.Id" class="btn-outline-primary btn-sm" data-id="@category.Id"><i class='bx bx-edit'></i></a>
                                <a asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-categoryId="@category.Id" class="btn-outline-danger btn-sm" data-id="@category.Id"><i class='bx bx-minus-circle'></i></a>
                                <a asp-area="Admin" asp-controller="Category" asp-action="Detail" asp-route-categoryId="@category.Id" class="btn-outline-success btn-sm" data-id="@category.Id"><i class='bx bx-show'></i></a>
                            </th>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="form-group mt-3">
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-block">Geri</a>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/categoryIndex.js" type="application/ecmascript"></script>
}