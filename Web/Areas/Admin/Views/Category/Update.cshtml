@model CategoryUpdateDTo

<div class="container-xxl flex-grow-1 container-p-y">

    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Makale Yönetimi /</span> Makale Ekle
    </h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header"></h5>
                <form asp-controller="Category" asp-action="Update" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="card-body">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group mt-3">
                            <label asp-for="Name" class="form-label">Kategori Adı</label>
                            <input asp-for="Name" type="text" class="form-control" id="defaultFormControlInput" placeholder="Kategori giriniz..." aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <button type="submit" class="btn btn-primary btn-block">Kaydet</button>
                            <a href="@Url.Action("Index", "Category")" class="btn btn-primary btn-block">Geri</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>


</div>