@model List<ArticleDTo>
<div class="container-xxl flex-grow-1 container-p-y">


    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Makale Yönetimi /</span> Makaleler
    </h4>

    <!-- Basic Bootstrap Table -->
    <div class="card p-2">
        <div class="table-responsive text-nowrap">

            <a asp-area="Admin" asp-controller="Article" asp-action="Add" class="btn btn-success mb-2">Makale Ekle<i class='bx bx-plus'></i></a>

            <table class="table table-bordered" id="articlesTable" width="100%" cellpadding="0">
                <thead>
                    <tr>
                        <th>Başlık</th>
                        <th>Kategori</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Oluşturan</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Başlık</th>
                        <th>Kategori</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Oluşturan</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </tfoot>
                <tbody class="table-border-bottom-0">
                    @foreach (var article in Model)
                    {
                        <tr name="@article.Id">
                            <th>@article.Title</th>
                            <th>@article.Category.Name</th>
                            <th>@article.CreatedDate.ToShortDateString()</th>
                            <th>@article.CreatedBy</th>
                            <th>@(article.IsDeleted ? "Aktif Değil" : "Aktif")</th>
                            <th>asd</th>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!--/ Basic Bootstrap Table -->

 

</div>

@section Scripts{
    <script src="~/js/articleIndex.js" type="application/ecmascript"></script>
}